<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="false">
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>service.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>service.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>myal</servlet-name>
    <servlet-class>service.MyArtListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myal</servlet-name>
    <url-pattern>/myal</url-pattern>
  </servlet-mapping>
  //删除操作
  <servlet>
    <servlet-name>mydel</servlet-name>
    <servlet-class>service.MyDelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mydel</servlet-name>
    <url-pattern>/mydel</url-pattern>
  </servlet-mapping>
  //添加操作
  <servlet>
    <servlet-name>addart</servlet-name>
    <servlet-class>service.MyAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addart</servlet-name>
    <url-pattern>/addart</url-pattern>
  </servlet-mapping>
  //修改操作
  <servlet>
    <servlet-name>upart</servlet-name>
    <servlet-class>service.UpArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upart</servlet-name>
    <url-pattern>/upart</url-pattern>
  </servlet-mapping>
  //修改展示
  <servlet>
    <servlet-name>showart</servlet-name>
    <servlet-class>service.ShowArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>showart</servlet-name>
    <url-pattern>/showart</url-pattern>
  </servlet-mapping>




</web-app>